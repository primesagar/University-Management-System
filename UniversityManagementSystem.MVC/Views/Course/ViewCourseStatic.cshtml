@model UniversityManagementSystem.MVC.Models.ViewCourseStaticsViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="featured">
    <!-- start slider -->
    <div class="container">
        <div class="row">
            <div class="col-lg-offset-2 col-lg-8">
                <div class=" col-lg-5" style="margin-bottom:20px">

                    <form method="post" class="registration-form">
                        <div class="form-group">
                            @Html.DropDownListFor(c => c.DepartmentId, selectList: Model.DepartmentSelectListItems, optionLabel: "!---Select Department---!", htmlAttributes: new { @class = "form-control", id = "DepartmentId" })
                        </div>

                    </form>
                </div>
                    <table class="table table-hover table-row">
                        <thead>
                        <tr class="table-row">
                        <th>Code</th>
                        <th>Name/Title</th>
                        <th>Semester</th>
                        <th>Assign To</th>
                        </tr>
                        </thead>
                        <tbody class="table-row">
                            @foreach (var course in Model.CourseList)
                            {
                            <tr>
                                <td>@course.Code</td>
                                <td>@course.Name</td>
                                <td>@course.SemesterId</td>
                                @if (@course.TeacherId == 0)
                                {
                                    <td> Not Assigned Yeat</td>
                                }
                                else
                                { 
                                    <td> @course.TeacherId</td>
                                }
                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
    </div>



</section>



@model UniversityManagementSystem.MVC.Models.StudentRegisterViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Top content -->
<div class="top-content">

    <div class="inner-bg">
        <div class="container">
            <div class="row">

                <div align="center">
                    @if (@ViewBag.Em != null)
                    {
                        <span class="alert alert-danger" id="denger-alert">@ViewBag.Em</span>
                    }
                </div>
                <div align="center">
                    @if (@ViewBag.Sm != null)
                    {
                        <span class="alert alert-success" id="success-alert">@ViewBag.Sm</span>
                    }
                </div>

                <div class="col-sm-5 form-box">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h2>Student Register</h2>
                        </div>
                        <div class="form-top-right">
                            <i class="fa fa-pencil"></i>
                        </div>
                    </div>
                    <div class="form-bottom">
                        <form role="form" action="" method="post" class="registration-form">
                            <div class="form-group">
                                <label class="sr-only" for="form-student_name">Name</label>
                                <input type="text" name="form-student_name" placeholder="Name" class="form-first-name form-control" id="form-first-name">
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="form-student_email">Email</label>
                                <input type="text" name="form-student_email" placeholder="Email" class="form-last-name form-control" id="form-last-name">
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="form-student_contactNo">ContractNo</label>
                                <input type="text" name="form-student_contactNo" placeholder="ContractNo..." class="form-last-name form-control" id="form-last-name">
                            </div>




                            <div class="form-group">
                                <label class="sr-only" for="form-date">Date</label>
                                <input type="date" name="remaining_date" placeholder="Date..." class="form-last-name form-control" id="form-last-name">

                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="form-student_address">Address</label>
                                <input type="text" name="form-student_address" placeholder="Address..." class="form-last-name form-control" id="form-last-name">
                            </div>

                            <div class="form-group">
                                @Html.DropDownListFor(c=>c.DepartmentId, selectList: Model.DepartmentSelectListItems, optionLabel: "!---Select Department---!", htmlAttributes: new { @class = "form-control"})
                                @*<select type="text" name="remaining_date" class="form-last-name form-control" id="form-last-name">
                                    <option value="">Department</option>
                                    <option value="seasonalfish">CSE</option>
                                    <option value="assortedmushrooms">EEE</option>
                                    <option value="assortedmushrooms">BBA</option>
                                </select>*@
                            </div>



                            <button type="submit" class="btn">Register !</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


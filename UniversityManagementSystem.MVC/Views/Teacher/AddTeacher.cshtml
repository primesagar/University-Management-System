
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="top-content">

    <div class="inner-bg">
        <div class="container">
            <div class="row">

                <div align="center">
                    @if (@ViewBag.Em != null)
                    {
                        <span class="alert alert-danger" id="denger-alert">@ViewBag.Em</span>
                    }
                </div>
                <div align="center">
                    @if (@ViewBag.Sm != null)
                    {
                        <span class="alert alert-success" id="success-alert">@ViewBag.Sm</span>
                    }
                </div>


                <div class="col-sm-5 form-box">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h2>Add Teacher</h2>
                        </div>
                        <div class="form-top-right">
                            <i class="fa fa-pencil"></i>
                        </div>
                    </div>

                    <div class="form-bottom">
                        <form role="form" action="" method="post" class="registration-form">
                            <div class="form-group">
                                <label class="sr-only" for="form-Name">Name</label>
                                <input type="text" name="Name" placeholder="Name" class="form-first-name form-control" id="form-first-name">
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="Address">Address</label>
                                <input type="text" name="Address" placeholder="Address" class="form-last-name form-control" id="form-last-name">
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="form-email">Email</label>
                                <input type="text" name="Email" placeholder="Email..." class="form-last-name form-control" id="form-last-name">
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="form-contact_no">ContactNo</label>
                                <input type="text" name="Contact" placeholder="ContactNo..." class="form-last-name form-control" id="form-last-name">
                            </div>

                            <div class="form-group">
                                @Html.DropDownList("Designation", new SelectList(ViewBag.dsl, "DesignationTitle", "DesignationTitle"))
                                @*<select type="text" name="remaining_date" class="form-last-name form-control" id="form-last-name">
                            <option value="">Designation</option>
                            <option value="seasonalfish">CSE</option>
                            <option value="assortedmushrooms">EEE</option>
                            <option value="assortedmushrooms">BBA</option>
                        </select>*@
                            </div>

                            <div class="form-group">
                                @Html.DropDownList("DepartmentId", new SelectList(ViewBag.dpl, "Id", "Name"))
                                @*<select type="text" name="remaining_date" class="form-last-name form-control" id="form-last-name">
                            <option value="">Department</option>
                            <option value="seasonalfish">CSE</option>
                            <option value="assortedmushrooms">EEE</option>
                            <option value="assortedmushrooms">BBA</option>
                        </select>*@
                            </div>




                            <div class="form-group">
                                <label class="sr-only" for="form-Credit_to_be_taken">Credit to be taken</label>
                                <input type="text" name="CreditLimit" placeholder="Credit to be taken..." class="form-last-name form-control" id="form-last-name">
                            </div>

                            <button type="submit" class="btn">Ssave !</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




